<%= form_for [@post.trip, @post.chapter, @post],  :html => { :multipart => true }  do |f| %>

<%= render 'alerts/error_message', object: @post %>

<div class="form-field">
    <%= f.label :title, class: "form-label" %>
    <div class="form-control">
      <%= f.text_field :title, class: "form-input" %>
    </div>
  </div>

   <div class="form-field">
    <%= f.label :date, class: "form-label" %>
    <div class="form-control">
      <%= f.date_field :date, class: "form-input" %>
    </div>
  </div>

  <div class="form-field">
    <%= f.label :location, for: "location", class: "form-label" %>
    <div class="form-control">
      <%= f.text_field :location, class: "form-input" %>
    </div>
  </div>

  <div class="form-field">
    <%= f.label :longitude, for: "longitude", class: "form-label" %>
    <div class="form-control">
      <%= f.text_field :longitude, class: "form-input" %>
    </div>
  </div>

  <div class="form-field">
    <%= f.label :latitude, for: "latitude", class: "form-label" %>
    <div class="form-control">
      <%= f.text_field :latitude, class: "form-input" %>
    </div>
  </div>

<div class="form-field">
    <%= f.label :content, class: "form-label" %>
    <div class="form-control">
      <%= f.text_area :content, class: "form-input" %>
    </div>
  </div>

<div class="form-field">
 <%= f.fields_for :post_attachments do |p| %>
     <div class="field">
       <%= p.label :post_image %><br>
       <%= p.file_field :post_image, :multiple => true, name: "post_attachments[post_image][]" %>
     </div>
   <% end %>
 </div>

  <div class="form-field">
    <div class="form-label"></div>
    <div class="form-control">
      <%= f.submit yield(:page_title), class: "form-btn" %>
    </div>
  </div>

  <% end %>