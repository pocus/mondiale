<div class = "row" class="post" >
	<div class="large-2 columns">

			<div class="post-title">
				<%= post.title %>

			<% if logged_in? && post.trip.user != current_user %>

				<div class = "pi" id="post-inspiration-link-<%= post.id %>">
					<% if !post.already_inspired?(current_user.id) %>
						<%= link_to 'I feel inspired', inspirations_path(inspiration: {inspirable_id: post, inspirable_type: post.class}), method: :post, remote: true %>
					<% end %>
				</div>
			<% end %>

			<div class = "pi" id='post-inspiration-count-<%= post.id %>'>
				<%= post.inspirations.count %> people have added this post as an inspiration
			</div>

			<% if post.trip.user == current_user %>
				<div class="trip-control">
					<%= link_to "", edit_trip_chapter_post_path(post.trip, post.chapter, post), class: "fa fa-edit", remote: true %>
					<%= link_to "", trip_chapter_post_path(post.trip, post.chapter, post), method: :delete, confirm: "Are you sure you want to delete this post?", class: "fa fa-times", title: "Delete post", remote: true %>
				</div>
				<% end %>
			</div>

	</div>

	<div class="large-8 columns">
		<div id="edit-post-form"></div>
		<div class="post-text"><%= markdown(post.content) %></div>
	</div>

	<div class="large-2 columns"></div>
</div>

<div class = "image-row">
	<div class="large-12 columns">
		<% post.post_attachments.each do |pic| %>
		  		<%= image_tag pic.postimage_url(:big), class: "post-image" %>
				<% end %>
	</div>
</div>

<% if post.inspiration_id %>
<% inspiration = Inspiration.find(post.inspiration_id).inspired_by %>
	<%= link_to inspiration.title, trip_chapter_path(inspiration.trip, inspiration.chapter) %>
<% end %>