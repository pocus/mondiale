var voteStatus = $('.upvote-button-'+ <%=@post.id%>).data('vote-status')

$(".upvote-count-"+ <%=@post.id%>).text(<%= @post.votes.count %> + " people have favourited this trip")


if (voteStatus === "upvote"){
$("#upvote-div-" + <%=@post.id%>).text("You have added this post to your favourites")
}
else {
$("#upvote-div-" + <%=@post.id%>).text("You have removed this post from favourites")
};