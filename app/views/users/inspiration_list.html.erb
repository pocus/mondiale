<div class="inpiration-list-links">
		<%= link_to "Trips You Found Inspiring", inspiration_list_user_path(@user, type: "Trips"), remote: true%>
		<%= link_to "Chapters You Found Inspiring", inspiration_list_user_path(@user, type: "Chapters"), remote: true%>
		<%= link_to "Posts You Found Inspiring", inspiration_list_user_path(@user, type: "Posts"), remote: true%>
</div>

<div class="inspiration-list">

	<div class="inspiration-trips">
		<h1>Trips You Found Inspiring</h1>
			<% @trips.each do |trip| %>
	  	<%= render 'templates/trip_summary', trip: trip%>
			<% end %>
	</div>

	<div class="inspiration-chapters">
		<h1>Chapters You Found Inspiring</h1>
				<% @chapters.each do |chapter| %>
	  		<%= render 'templates/chapter_summary', chapter: chapter %>
				<% end %>
	</div>

	<div class="inspiration-posts">
		<h1>Posts You Found Inspiring</h1>
				<% @posts.each do |post| %>
	  		<%= render 'templates/post_summary', post: post %>
				<% end %>
	</div>


</div>