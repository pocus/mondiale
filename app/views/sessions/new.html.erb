<div class="form">
<%= form_for :session, url: sessions_path, html: { class: "form-container" } do |f| %>

  <div class="form-field">
    <%= f.label "Signin ID", for: "session_signin_id", class: "form-label" %>
    <div class="form-control">
      <%= f.text_field :signin_id, class: "form-input", placeholder: "Email or Username" %>
    </div>
  </div>

  <div class="form-field">
    <%= f.label :password, for: "user_password", class: "form-label" %>
    <div class="form-control">
      <%= f.password_field :password, class: "form-input",
          placeholder: "Enter your password" %>
    </div>
  </div>

  <div class="form-field">
    <div class="form-label"></div>
    <div class="form-control">
      <%= f.submit "Sign In", class: "form-btn" %>
      <%= link_to 'Back', :back, class: "form-btn" %>
    </div>
  </div>

   <div class="form-field">
    <%= f.label :remember_me, for: "remember_me", class: "form-label" %>
    <div class="form-control">
      <%= f.check_box :remember_me, class: "form-input" %>
    </div>
  </div>


<% end %>
</div>

<%= params %>