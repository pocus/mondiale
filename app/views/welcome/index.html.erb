<div id="welcome" class="jumbo">
  <div class="background"></div>

  <div class="welcome-text">
  	Mondiale helps you tell your travel story.</div>

  <div class="search-bar">
    <%= form_tag trips_path, method: :get, id: "search" do %>
    <%= text_field_tag :search, params[:search], placeholder: "Type In a Location" %>
  <% end %>
    <span class="fa fa-search"></span>
  </div>
</div>

<div class="featured-trips">
  <h2 class="title">Featured</h2>

  <div class="recent-trips"></div>
    <h3>Recently Added Trips</h3>
    <%= render @recent_trips %>
  </div>

  <div class="top-rated-trips">
    <h3>Top Rated Trips</h3>
    <%= render @top_rated_trips %>
  </div>


</div>