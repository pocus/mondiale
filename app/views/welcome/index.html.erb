<div id="welcome" class="jumbo">
  <div id="background-image"><div id="blur"></div></div>
  <h1 class="title">
    <%= site_name %>
  </h1>
  <div class="tag">
    Tell your travel story.
  </div>
  <div class="search-bar">

    <%= form_tag trips_path, method: :get, remote: true, id: "search" do %>
      <%= text_field_tag :search, params[:search],
          placeholder: "Show me stories from ... (Try 'Arizona')" %>
      <%= hidden_field_tag :from, params[:from], value: params[:controller] %>
    <% end %>
    <span class="fa fa-search"></span>

  </div>
</div>

<div class="trips-index">

</div>