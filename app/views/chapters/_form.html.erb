<div class="form">
<h2>Form</h2>
<%= form_for [@chapter.trip, @chapter], remote: true, html: {class: "form-container"} do |f| %>

<%= render 'alerts/error_message', object: @chapter %>

  <div class="form-field">
    <%= f.label :title, class: "form-label" %>
    <div class="form-control">
      <%= f.text_field :title, class: "form-input" %>
    </div>
  </div>

  <div class="form-field">
    <%= f.label :description, class: "form-label" %>
    <div class="form-control">
      <%= f.text_area :description, class: "form-input" %>
    </div>
  </div>

  <div class="wishlist-items">
    <h3>Inspirations</h3>

    <% current_user.find_voted_items.each do |i| %>
      <% if i %>
      <%= f.radio_button :inspirationinfo, "#{i.class.to_s} #{i.id}", id: "#{i.class.to_s} #{i.id}"  %>
      <%= f.label :inspirationinfo, i.title, for: "#{i.class.to_s} #{i.id}"  %>
        </br>
      <% end %>
    <% end %>

  </div>

  <div class="form-field">
    <div class="form-label"></div>
    <div class="form-control">

      <%= f.submit class: "form-btn"%>
    </div>
  </div>

<% end %>
</div>