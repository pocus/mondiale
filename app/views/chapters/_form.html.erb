<div id="chapter" class="form-float">
<%= form_for [@chapter.trip, @chapter], remote: true, html: { class: "form-container" } do |f| %>

  <legend class="form-title"><%= title %></legend>
  <%= render 'alerts/error_message', object: @chapter %>

  <div class="form-section">
    <div class="form-field">
      <%= f.text_field :title, class: "form-input", placeholder: "Trip name" %>
      <%= f.text_area :description, class: "form-input",
            placeholder: "Trip summary" %>
    </div>
    <div class="form-field">
      <%= f.submit submit, class: "form-btn" %>
      <%= link_to "Close", '#', class: "form-btn close" %>
    </div>
  </div>

  <div class="inspirations">
    <h3>Inspirations</h3>
    <% current_user.inspirations.each do |inspiration| %>
      <%= f.radio_button :inspiration_id, inspiration.id %>
      <%= f.label :inspiration_id, inspiration.inspired_by.title %>
    <% end %>
  </div>

<% end %>
</div>