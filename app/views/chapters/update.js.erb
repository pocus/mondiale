<% if @chapter.errors.any? %>
  post_fail($('<%= j render "alerts/error_message", object: @chapter %>'))
<% else %>
  var form = $('#chapter.form-float');
  slideUpRemove(form);
  removeBlur();

  $('h1.title').html('<%= @chapter.title %>')
  var description = $('.description');
  var label = description.children('small.label');
  var inspirationCount = description.children('div.inspirations-count')
  description
  .empty()
  .append(label)
  .append(inspirationCount)
  .append('<%= j simple_format(@chapter.description, sanitize: true) %>')

<% end %>

