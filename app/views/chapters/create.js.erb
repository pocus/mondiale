$('#new-chapter-form').empty();
$('<%= j render @chapter %>').appendTo($('.chapters'));

<% if @chapter.errors.any? %>
  var alert = $('<%= j render "alerts/error_message", object: @chapter %>')
    .insertAfter('.form-title');
  alertCloseBtn(alert)
<% else %>
  var form = $('#chapter.form-float');
  slideUpRemove(form);
  removeBlur();

  var newPost = $('<%= j render @chapter %>');
  newPost.appendTo('.chapter-content');
<% end %>

