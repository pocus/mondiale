<div class="cover-page">
	<div class="cover-photo" data-image-url="<%= image_url(@chapter.cover_photo )%>">
	</div>

	<div class="row">
	<div class="header large-10 large-offset-1 columns end">

		<% if logged_in? %>
		<div class="control">
			<ul>
				<li><%= link_to '', new_trip_chapter_post_path(@trip, @chapter), class: "fa fa-plus-square", remote: true %></li>
				<li></li>
				<li><%= link_to "", edit_trip_chapter_path(@trip, @chapter), class: "fa fa-edit", remote: true %></li>
				<li><%= link_to "", [@trip, @chapter], confirm: "Are you sure you want to delete this chapter?", method: :delete, remote: true, class: "fa fa-times" %></li>
			</ul>
		</div>
		<% end %>


		<h1 class="title"><%= @chapter.position %> - <%= @chapter.title %></h1>
		<small class="date"><%= trip_date(@chapter) %></small>
		<p class="author">by <%= link_to @trip.user.name, @trip.user %></p>

	</div>
	</div>

</div>

<div class="page-content">

	<div class = "">

		<% if logged_in? && @chapter.trip.user != current_user %>
		<div class="inspiration-link">
			<% if !@chapter.already_inspired?(current_user.id) %>
			<%= link_to 'I feel inspired', inspirations_path(inspiration: {inspirable_id: @chapter, inspirable_type: @chapter.class}), method: :post, remote: true %>
			<% end %>
		</div>
		<% end %>

	</div>

</div>


<div class="page-content">

	<div class="row">

		<div class="large-4 large-offset-1 columns description">
			<small class="description-label label">Chapter</small>
			<div class="inspirations-count label">
				<%= @chapter.inspirations.count %> <div class="fa fa-heart"></div>
			</div>
			<%= simple_format(@trip.description, sanitize: true) %>
		</div>

		<div class="large-6 columns end googleMap">
			<div class="cover-map" data-objects="<%= posts_in_json(@chapter.posts) %>"></div>
		</div>

	</div>


</div>

	<% if @inspired_by %>
	<p>inspired by<%= link_to @inspired_by.title, [@inspired_by.trip, @inspired_by] %></p>
	<% end %>

	<div class="posts">
		<% @chapter.posts.each do |p| %>
		<%= render p %>
		<% end %>
	</div>




