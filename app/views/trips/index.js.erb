<% if params[:search] && params[:from] == "welcome" %>
  $('.trips-index').html($("<%= j render 'templates/search_results', objects: @trips.select { |t| !t.nil? } %>"));
  coverPhoto();
  loadMaps();
  searchResult();
  smoothScroll($('.search-result'), 600);
<% elsif params[:search] %>
  $('.trips-index').html($("<%= j render @trips %>"));
  coverPhoto();
  loadMaps();
<% end %>