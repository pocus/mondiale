<% if @trip.errors.any? %>
  post_fail($('<%= j render "alerts/error_message", object: @trip %>'))
<% else %>
  var form = $('#trip.form-float');
  slideUpRemove(form);
  removeBlur();

  $('h1.title').html('<%= @trip.title %>')
  var description = $('.description');
  var label = description.children('small.label');
  var inspirationCount = description.children('div.inspirations-count')
  description
  .empty()
  .append(label)
  .append(inspirationCount)
  .append('<%= j simple_format(@trip.description, sanitize: true) %>')

<% end %>

