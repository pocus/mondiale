

<div id="trip-cover">
	<div class="trip-title"><%= @trip.title %></div>
	<% if @cover %>
		<%= image_tag @cover.postimage_url(:cover), :id => 'trip-cover-pic' %>
		<% else %>
		<%= image_tag 'default_cover.jpg' %>
	<% end %>

	<div id="map-canvas" data-objects="<%= posts_in_json(@trip.posts) %>">
	</div>

</div>

<div class="trip-content">
<p><%= markdown(@trip.description) %></p>

<% if @trip.inspiration_id != nil %>

	<div class="inspirations">
		<p>This trip was inspired by <%= @inspiration.title %></p>
	</div>

<% end %>

<div class="inspiration-div">
	<% if logged_in? %>
		<% if Inspiration.by_this?(current_user.id, @trip.id, @trip.class) %>
			<button class="inspiration-button">
				<%= link_to "Remove This as an Inspiration", inspiration_path(Inspiration.by_this(current_user.id, @trip.id, @trip.class)[0].id), method: :delete, remote: true %>
			</button>
		<% else %>
			<button class="inspiration-button" >
				<%= link_to "Add This as an Inspiration", inspirations_path(inspiration: {inspirable_id: @trip, inspirable_type: @trip.class}), method: :post, remote: true %>
			</button>

		<% end %>
	<% end %>s

	</div>

	<p class='inspirations-count'><%= @trip.inspirations.count %> people have added this trip as an inspiration</p>


	<div class="trip-crud">
	<% if @trip.user == current_user %>
	<ul>
		<li><%= link_to "Set trip cover photo", set_trip_cover_path(:id => @trip.id), :class => 'sel-cov', remote: true %></li>
		<li><%= link_to "Edit this trip", edit_trip_path %></li>
		<li><%= link_to "Remove this trip", @trip, {confirm: "Are you sure you want to delete this trip?", method: :delete, remote: true} %></li>
	</ul>
	<% end %>
	</div>

	<div id="set-cov">
	</div>

	<h2>Chapters</h2>

		<% if @trip.user == current_user %>
		<ul>
			<li><%= link_to "Create a new chapter", new_trip_chapter_path(@trip), :class => 'new-chapter', remote: true %></li>
		</ul>

		<div id="new-chapter-form">

		</div>

		<% end %>
	<div class="chapters">
		<ul id = "chapters-list">
			<%= render @chapters %>
		</ul>
	</div>
</div>