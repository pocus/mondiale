<div class="trip">
	<%= image_tag @trip.cover_photo, class: "cover-photo" %>
	<div class="header">
		<h1 class="title"><%= @trip.title %></h1>
		<small class="trip-date"><%= trip_date(@trip) %></small>
	</div>
	<div class="cover-map" data-objects="<%= posts_in_json(@trip.posts) %>"></div>
</div>

<div class="trip-content row">
	<% if logged_in? %>
	<div class="trip-control columns large-3 large-offset-9">
		<ul>
			<li><%= link_to '', new_trip_chapter_path(@trip), class: "fa fa-plus-square", remote: true %></li>
			<li><%= link_to '', set_trip_cover_path(id: @trip.id), class: 'sel-cov', remote: true, class: "fa fa-desktop" %></li>
			<li><%= link_to "", edit_trip_path, class: "fa fa-edit" %></li>
			<li><%= link_to "", @trip, confirm: "Are you sure you want to delete this trip?", method: :delete, remote: true, class: "fa fa-times" %></li>
		</ul>
	</div>
	<% end %>

	<!-- Need to re-arranged -->
	<div id="set-cov"></div>
	<div id="new-chapter-form"></div>

<div class="trip-content">
<p><%= markdown(@trip.description) %></p>

<% if logged_in? %>

	<div class="inspiration-link">
		<% if @trip.already_inspired?(current_user.id) %>
			<%= link_to 'I am no longer inspired', @trip.already_inspired(current_user.id), method: :delete, remote: true %>
		<% else %>
			<%= link_to 'I feel inspired', inspirations_path(inspiration: {inspirable_id: @trip, inspirable_type: @trip.class}), method: :post, remote: true %>
		<% end %>
	</div>

<% end %>

	<div class='inspirations-count'>
		<%= @trip.inspirations.count %> people have added this as an inspiration
	</div>

	<%= simple_format(@trip.description, sanitize: true, class: "trip-description") %>

	<% @trip.chapters.each do |c| %>
		<%= render 'templates/chapter_summary', c: c %>
	<% end %>
</div>

