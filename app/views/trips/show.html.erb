<div class="trip">
	<div class="cover-photo" data-image-url="<%= image_url(@trip.cover_photo )%>">
		<%= link_to '', new_cover_trip_path(id: @trip.id), remote: true, class: "fa fa-camera set-cov-btn" %>
	</div>

	<div class="header">

		<% if logged_in? %>
		<div class="trip-control">
			<ul>
				<li><%= link_to '', new_trip_chapter_path(@trip), class: "fa fa-plus-square", remote: true %></li>
				<li></li>
				<li><%= link_to "", edit_trip_path, class: "fa fa-edit", remote: true %></li>
				<li><%= link_to "", @trip, confirm: "Are you sure you want to delete this trip?", method: :delete, remote: true, class: "fa fa-times" %></li>
			</ul>
		</div>
		<% end %>

		<h1 class="title"><%= @trip.title %></h1>
		<small class="trip-date"><%= trip_date(@trip) %></small>
		<p class="author">by <%= link_to @trip.user.name, @trip.user %></p>
	</div>

	<% if @trip.posts.any? %>
		<div class="cover-map" data-objects="<%= posts_in_json(@trip.posts) %>"></div>
	<% end %>
</div>


<div class="trip-content row">

	<div class="description columns large-10 large-offset-1">
		<small class="label">Description</small>
		<%= simple_format(@trip.description, sanitize: true) %>
	</div>

	<% if logged_in? %>
	<div class="inspiration-link">
		<% if !@trip.already_inspired?(current_user.id) %>
			<%= link_to 'I feel inspired', inspirations_path(inspiration: {inspirable_id: @trip, inspirable_type: @trip.class}), method: :post, remote: true %>
		<% end %>
	</div>
	<% end %>

	<div class='inspirations-count'>
		<%= @trip.inspirations.count %> people have added this post as an inspiration
	</div>

	<% if @inspired_by %>
		<%= link_to @inspired_by.title, @inspired_by %>
	<% end %>

	<div class="chapters">
		<% @trip.chapters.each do |c| %>
		<div class="row">
				<div class="columns large-10 large-offset-1">
					<%= render c %>
				</div>
		</div>
		<% end %>
	</div>
</div>

