

<div id="trip-cover">
	<div class="trip-title"><%= @trip.title %></div>
	<% if @cover %>
		<%= image_tag @cover.postimage_url(:cover), :id => 'trip-cover-pic' %>
		<% else %>
		<%= image_tag 'default_cover.jpg' %>
	<% end %>

	<div id="map-canvas" data-objects="<%= posts_in_json(@trip.posts) %>">
	</div>

</div>

<div class="trip-content">
<p><%= markdown(@trip.description) %></p>

<% if logged_in? %>

	<div class="inspiration-link">
		<% if @trip.already_inspired?(current_user.id) %>
			<%= link_to 'I am no longer inspired', @trip.already_inspired(current_user.id), method: :delete, remote: true %>
		<% else %>
			<%= link_to 'I feel inspired', inspirations_path(inspiration: {inspirable_id: @trip, inspirable_type: @trip.class}), method: :post, remote: true %>
		<% end %>
	</div>

<% end %>

	<div class='inspirations-count'>
		<%= @trip.inspirations.count %> people have added this as an inspiration
	</div>


	<div class="trip-crud">
	<% if @trip.user == current_user %>
	<ul>
		<li><%= link_to "Set trip cover photo", set_trip_cover_path(:id => @trip.id), :class => 'sel-cov', remote: true %></li>
		<li><%= link_to "Edit this trip", edit_trip_path %></li>
		<li><%= link_to "Remove this trip", @trip, {confirm: "Are you sure you want to delete this trip?", method: :delete, remote: true} %></li>
	</ul>
	<% end %>
	</div>

	<div id="set-cov">
	</div>

	<h2>Chapters</h2>

		<% if @trip.user == current_user %>
		<ul>
			<li><%= link_to "Create a new chapter", new_trip_chapter_path(@trip), :class => 'new-chapter', remote: true %></li>
		</ul>

		<div id="new-chapter-form">

		</div>

		<% end %>
	<div class="chapters">
		<ul id = "chapters-list">
			<%= render @chapters %>
		</ul>
	</div>
</div>