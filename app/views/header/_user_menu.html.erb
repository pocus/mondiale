<ul class="nav-menu">
  <li><%= link_to 'Create trip', new_trip_path, class: "btn" %></li>
  <li><%= link_to 'Discover trips', trips_path, class: "btn" %></li>
<li>

  <% if current_user && cookies.permanent[:last_chapter_viewed] && cookies.permanent[:last_trip_viewed] %>
    <%= link_to 'View most recent chapter', trip_chapter_path(:trip_id => cookies.permanent[:last_trip_viewed], :id => cookies.permanent[:last_chapter_viewed]), class: "btn" %></li>
  <% end %>
  <li>
    <%= link_to "#", class: "dropdown btn", data: { toggling: "user-dropdown" } do %>
      <%= current_user.name %>
      <%= image_tag current_user.gravatar(50), class: "gravatar" %>
    <% end %>
    <ul id="user-dropdown" class="dropdown-menu">
      <li><%= link_to 'My profile', current_user, class: "btn" %></li>
      <li><%= link_to 'Edit profile', edit_user_path(current_user), class: "btn" %></li>
      <li><%= link_to 'Sign out', :signout, class: "btn" %></li>
    </ul>
  </li>

</ul>